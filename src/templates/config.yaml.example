## Simple example config â€” comments come before each setting.
## Use relative to this config file's location.

# where voice/model files live
voices_dir: ../../voices

# optional: where static sounds live
sounds_dir: ../../sounds

# piper executable (on PATH or full path)
piper_bin: piper

# ffmpeg for audio conversion
ffmpeg_bin: ffmpeg

# default output format (mp3 or wav)
default_format: mp3

# bitrate used when mp3 is selected
mp3_bitrate: 128k

# normalize audio output (true/false)
normalize: false

# max characters allowed in input text
max_text_chars: 500

# max parallel TTS jobs
max_concurrency: 2

# in-memory cache size for rendered audio
cache_size: 64

# cache TTL in seconds
cache_ttl_s: 300

# CORS allow list (use '*' to allow all origins)
cors_allow_origins: "*"

# named rendering presets
presets:
  # faster speech preset
  fast:
    length_scale: 0.85
  # slower speech preset
  slow:
    length_scale: 1.2

# moderation settings
moderation:
  # turn moderation on/off
  enabled: true
  # remove URLs from input
  strip_urls: true
  # remove emoji characters
  strip_emojis: true
  # censor known slurs/terms
  censor_slurs: true
  # path to blocklist file (one term per line)
  blocklist_path: ./mod_blocklist.txt

# auth configuration
auth:
  # require auth for panel/API
  enabled: true
  # file that stores keys and oauth mappings
  file: ./secrets.yaml

# session cookie settings
session:
  # where session secret is stored
  file: ./secrets.yaml
  # name of the session cookie
  cookie_name: sid
  # same_site policy: lax | strict | none
  same_site: lax
  # set to true when using HTTPS
  secure: false

# TODO: should this go here or the secrets.py? secrets.py right?
# OAuth provider example (copy client_id/secret into secrets.yaml)
# Probably once generated it should add this...
oauth:
  twitch:
    # Twitch client id (put real value in secrets.yaml)
    client_id: "your_twitch_client_id"
    # Twitch client secret (keep private; do not commit)
    client_secret: "your_twitch_client_secret"
    # redirect URI configured in Twitch dev console
    redirect_uri: "https://yourhost/api/auth/callback"

# example oauth mappings (place real mappings in secrets.yaml under oauth.mappings)
oauth_mappings_example:
  twitch:
    # numeric Twitch id -> role (preferred)
    "12345678": mod
    # login/username -> role (case-insensitive)
    "someusername": admin
